- model_class = OrderItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:order_id)
      %th= model_class.human_attribute_name(:book_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @order_items.each do |order_item|
      %tr
        %td= link_to order_item.id, order_item_path(order_item)
        %td= order_item.price
        %td= order_item.quantity
        %td= order_item.order_id
        %td= order_item.book_id
        %td=l order_item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_order_item_path(order_item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), order_item_path(order_item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_order_item_path, :class => 'btn btn-primary'
