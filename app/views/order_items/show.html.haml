- model_class = OrderItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @order_item.price
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @order_item.quantity
%p
  %strong= model_class.human_attribute_name(:order_id) + ':'
  %br
  = @order_item.order_id
%p
  %strong= model_class.human_attribute_name(:book_id) + ':'
  %br
  = @order_item.book_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), order_items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_order_item_path(@order_item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), order_item_path(@order_item), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
