- model_class = Author
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:biography)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @authors.each do |author|
      %tr
        %td= link_to author.id, author_path(author)
        %td= author.first_name
        %td= author.last_name
        %td= author.biography
        %td=l author.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_author_path(author), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), author_path(author), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_author_path, :class => 'btn btn-primary'
