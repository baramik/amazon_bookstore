- model_class = Author
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @author.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @author.last_name
%p
  %strong= model_class.human_attribute_name(:biography) + ':'
  %br
  = @author.biography

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), authors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_author_path(@author), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), author_path(@author), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
