- model_class = CreditCard
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:number)
      %th= model_class.human_attribute_name(:CVV)
      %th= model_class.human_attribute_name(:expiration_month)
      %th= model_class.human_attribute_name(:expiration_year)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:customer_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @credit_cards.each do |credit_card|
      %tr
        %td= link_to credit_card.id, credit_card_path(credit_card)
        %td= credit_card.number
        %td= credit_card.CVV
        %td= credit_card.expiration_month
        %td= credit_card.expiration_year
        %td= credit_card.first_name
        %td= credit_card.last_name
        %td= credit_card.customer_id
        %td=l credit_card.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_credit_card_path(credit_card), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), credit_card_path(credit_card), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_credit_card_path, :class => 'btn btn-primary'
