- model_class = Raiting
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:review) + ':'
  %br
  = @raiting.review
%p
  %strong= model_class.human_attribute_name(:raiting_number) + ':'
  %br
  = @raiting.raiting_number
%p
  %strong= model_class.human_attribute_name(:book_id) + ':'
  %br
  = @raiting.book_id
%p
  %strong= model_class.human_attribute_name(:customer_id) + ':'
  %br
  = @raiting.customer_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), raitings_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_raiting_path(@raiting), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), raiting_path(@raiting), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
