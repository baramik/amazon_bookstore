= form_for @raiting, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :review, :class => 'control-label'
    .controls
      = f.text_field :review, :class => 'text_field'
  .control-group
    = f.label :raiting_number, :class => 'control-label'
    .controls
      = f.text_field :raiting_number, :class => 'text_field'
  .control-group
    = f.label :book_id, :class => 'control-label'
    .controls
      = f.text_field :book_id, :class => 'text_field'
  .control-group
    = f.label :customer_id, :class => 'control-label'
    .controls
      = f.text_field :customer_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), raitings_path, :class => 'btn'
